{% set classes = [
  'fonts',
  'stack'
] %}

{% set cat = '' %}

<div class="{{ classes|join(' ') }}">
	{% for font in fonts %}
		
    {% set cat = font.category %}

		{# Start new group. #}
		<div class="font__group stack">
			<div class="box">
				<h2>--font-{{ font.category }}: {{ font.value }};</h2>
			</div>

      <div class="font box">
        <div class="font__swatch" style="font-family: var(--font-{{ cat }}); font-weight: 400">
          <h1 style="font-family: var(--font-{{ cat }}); font-weight: 400">The quick brown fox jumps over the lazy dog.</h1>
          <h2 style="font-family: var(--font-{{ cat }}); font-weight: 400">The quick brown fox jumps over the lazy dog.</h2>
          <h3 style="font-family: var(--font-{{ cat }}); font-weight: 400">The quick brown fox jumps over the lazy dog.</h3>
          <h4 style="font-family: var(--font-{{ cat }}); font-weight: 400">The quick brown fox jumps over the lazy dog.</h4>
          <h5 style="font-family: var(--font-{{ cat }}); font-weight: 400">The quick brown fox jumps over the lazy dog.</h5>
          <h6 style="font-family: var(--font-{{ cat }}); font-weight: 400">The quick brown fox jumps over the lazy dog.</h6>
          <hr />
          <p style="font-family: var(--font-{{ cat }}); font-weight: 400">The quick brown fox jumps over the lazy dog.</p>
          <p style="font-family: var(--font-{{ cat }}); font-weight: 400">ABCDEFGHIJKLMNOPQRSTUVWXYZ</p>
          <p style="font-family: var(--font-{{ cat }}); font-weight: 400">0123456789</p>
        </div>
      </div>
    </div>

  {% endfor %}
</div>
