        <div class="form-type-textfield">
          <label for="txtSubjectLine">Subject Line</label>
          <input type="text" id="txtSubjectLine" name="txtSubjectLine" placeholder="Enter subject" />
        </div>
        <div class="form-type-textbox">
          <label for="password">Message</label>
          <textarea id="txtMessage" name="txtMessage" placeholder="Type your messages here.."></textarea>
        </div>
        <div class="form-type-checkbox">
          <label class="label" for="chkremme">Remember me</label>
          <input type="checkbox" id="chkremme" name="chkremme" checked="checked" />
        </div>
        <div class="form-type-radio-button">
          <label class="label" for="subject">Turn Notifications</label>
          <label for="radio1">On:</label>
          <input type="radio" id="radio1" name="radioNotif" checked="checked" />
          <label for="radio2">Off:</label>
          <input type="radio" id="radio2" name="radioNotif" />
        </div>
      </div>
      <div class="section__button center">
        <a href="#" class="button button--secondary button--normal" _keys="class">Send Form</a>
      </div>
    </div>
  </div>
  <div class="section section--justify-center section--align-center section--color-primary-dark-xx">
