<div id="root">
  <div class="section section--justify-center section--align-center section--color-warm-dark-x">
    <div class="section__content container">
      <div class="section__header center stack" style="--space: var(--s0):">

        <h2>Contact Us</h2>
        <p>For questions or update for language access resources. Lorem ipsum dolor sit amet, consectetur adipiscing elit..</p>
      </div>
      <div class="section__main center stack">
        <div class="cluster">
          <div class="el-input stack half-stack">
            <label class="el-input__label" for="txtYourName">Your Name</label>
            <div class="el-input__field m-t-0">
              <input type="text" id="txtYourName" name="txtYourName" placeholder="Enter name" />
            </div>
          </div>
          <div class="el-input stack half-stack">
            <label class="el-input__label" for="txtYourEmail">Your Email</label>
            <div class="el-input__field m-t-0">
              <input type="text" id="txtYourEmail" name="txtYourEmail" placeholder="Enter email" />
