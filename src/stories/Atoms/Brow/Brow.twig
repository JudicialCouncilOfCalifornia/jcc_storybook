{# Set up variant classes. #}
{% set variant_class = variant ? 'brow--' ~ variant : 'brow--default' %}

{# Create class array. #}
{# Include composable layout classes as needed. #}
{# Include variant classes form above. #}
{% set classes = [
  'brow',
  variant_class,
  'detect-wrap',
  'detect-wrap--observed',
] %}

{% if (part_one or part_two) %}
  <div class="{{ classes|join(' ') }}">
    {# Use composable layout classes as needed. #}
    {# Use BEM syntax if needed for styling classes. #}
    {% if part_one %}
      <span class="brow__accent">{{ part_one }}</span>
    {% endif %}
    {% if part_two %}
      <span class="brow__secondary" {% if news_header %}style="color: var(--color-black);"{% endif %}>{{ part_two }}</span> 
    {% endif %}
  </div>
{% endif %}
