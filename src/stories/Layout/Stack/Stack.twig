{% set styles = [] %}
{% set styles = space ? styles|merge(['--gap: var(' ~ space ~ ');']) : styles %}

{% set classes = [
  'stack',
  'stack-demo',
] %}

<div class="{{ classes|join(' ') }}" style=" {{ styles|join }} ">
	{% for i in range(1, num_items) %}
		<div class="box">{{ i }}</div>
	{% endfor %}
</div>
