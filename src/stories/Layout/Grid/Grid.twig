{% set styles = [] %}
{% set styles = gap ? styles|merge(['--gap: var(' ~ gap ~ ');']) : styles %}
{% set styles = grid_min_width ? styles|merge(['--grid-min-width: ' ~ grid_min_width ~ ';']) : styles %}

{% set classes = [
  'grid',
  'grid-demo',
] %}

<div class="{{ classes|join(' ') }}" style="{{ styles|join }}">
	{% for i in range(1, num_items) %}
		<div class="box">{{ random(['xxx', 'xxxxx', 'xxx xxxxx', 'xxx xxxxx xxxxx', 'xxxx xxxxxx xxxxxxx xxxx']) }}</div>
	{% endfor %}
</div>
