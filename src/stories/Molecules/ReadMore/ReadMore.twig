{# Set up variant classes. #}
{% set variant_class = variant ? 'read-more--' ~ variant : 'read-more--default' %}

{# Create class array. #}
{# Include composable layout classes as needed. (stack, grid, center, etc.) #}
{# Include variant classes form above. #}
{% set classes = [
  'read-more',
  variant_class,
  'cluster',
] %}

<div class="{{ classes|join(' ') }}">
  <h3 class="read-more__heading">
    {{ heading }}
    <a class="read-more__action" tabindex="0" aria-label="Show more">
      <span class="read-more__action_label">More</span>
      {% include "@atoms/Icon/Icon.twig" with {
        icon: "fa-chevron-down",
      } %}
    </a>
  </h3>
  <div class="read-more__content">
    {{ content }}
  </div>
</div>
