{# Set up variant classes. #}
{% set variant_class = variant ? 'email-singup--' ~ variant : 'email-singup--default' %}

{# Create class array. #}
{# Include composable layout classes as needed. (stack, grid, center, etc.) #}
{# Include variant classes form above. #}
{% set classes = [
  'email-singup',
  'container',
  variant_class,
] %}

<div {{ attributes.addClass(classes) }}>
  {# {% include "@organisms/Section/Section.twig" with section %} #}
  <div class="switcher">
    <div class="email-signup__aside stack">
      <h2>Stay Up-to-date</h2>
      <p>Subscribe with your email address to recieve Court Interpreter Program updates, exam news and resources.</p>
    </div>
    <form class="email-signup__form">
      <div class="el-input el-input--with-button stack">
        <label class="el-input__label" for="txtFooterYourName">EMAIL ADDRESS</label>
        <div class="el-input__field cluster">
          <input type="email" id="email" name="email" placeholder="Enter Email" />
          <button onclick='alert("Not a real form.")' class="button button--secondary button--small">Join</button>
        </div>
      </div>
    </form>
  </div>
</div>
