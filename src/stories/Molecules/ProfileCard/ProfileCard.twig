{# Card heading depends if a section heading exists or not. #}
{% set h = has_section_heading ? 'h3' : 'h2' %}

{% set classes = [
  'profile-card',
  'profile-card--default',
] %}

<div class="{{ classes|join(' ') }}">
  {% if url is not empty %}<a href="{{ url }}" class="profile-card__link">{% endif %}
    <div class="profile-card__inner stack">
      <div class="profile-card__image">
        {% if image %}
          {{ image }}
        {% else %}
          {% include "@atoms/Icon/Icon.twig" with {
            icon: placeholder.icon,
            color: false,
            icon_path: placeholder.icon_path,
          } %}
        {% endif %}
      </div>

      {% if name %}
        <{{ h }} class="profile-card__name">{{ name }}</{{ h }}>
      {% endif %}
      
      {% if title %}
        <div class="profile-card__title">{{ title }}</div>
      {% endif %}
      
      {% if content %}
        <div class="profile-card__content">{{ content }}</div>
      {% endif %}
    </div>
  {% if url is not empty %}</a>{% endif %}
</div>
